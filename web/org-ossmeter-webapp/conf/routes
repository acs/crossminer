GET		/projects/:id/				controllers.Projects.view(id:String)
GET		/projects/:id/summary		controllers.Projects.viewTmp(id:String, qm : String ?= "channels", summary : Boolean = true)
GET		/projects/:id/summary/		controllers.Projects.viewTmp(id:String, qm : String ?= "channels", summary : Boolean = true)
GET		/projects/:id/detail		controllers.Projects.viewTmp(id:String, qm : String ?= "channels", summary : Boolean = false)
GET		/projects/:id/detail/		controllers.Projects.viewTmp(id:String, qm : String ?= "channels", summary : Boolean = false)

