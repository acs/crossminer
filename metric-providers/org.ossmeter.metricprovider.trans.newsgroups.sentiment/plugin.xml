<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<plugin>
  <extension point="com.googlecode.pongo.runtime.osgi">
    <class name="org.ossmeter.metricprovider.trans.newsgroups.sentiment.model.NewsgroupsSentimentTransMetric"/>
    <class name="org.ossmeter.metricprovider.trans.newsgroups.sentiment.model.ThreadStatistics"/>
  </extension>
  <extension
        point="org.ossmeter.platform.visualisation.metric">
     <visualisation
           json="vis/trans.newsgroups.sentiment.json">
     </visualisation>
  </extension>
  <extension
        point="org.ossmeter.platform.metricprovider">
     <metricProvider
           provider="org.ossmeter.metricprovider.trans.newsgroups.sentiment.SentimentTransMetricProvider">
     </metricProvider>
  </extension>
</plugin>
