<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="ossmeter.workerservice"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="org.ossmeter.platform.osgi.OssmeterApplication">
         </run>
      </application>
   </extension>
   <extension
         id="ossmeter"
         point="org.eclipse.core.runtime.products">
      <product
            application="ossmeter.workerservice"
            name="OSSMETER">
         <property
               name="appName"
               value="OSSMETER">
         </property>
      </product>
   </extension>

</plugin>
